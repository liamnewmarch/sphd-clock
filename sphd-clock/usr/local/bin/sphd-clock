#!/usr/bin/env python3

import signal
import time

import scrollphathd
from scrollphathd.fonts import font5x5


scrollphathd.rotate(degrees=180)


def clear():
    """Clear the display."""
    scrollphathd.clear()


def draw_bar():
    """Draw a seconds progress bar across the bottom of the display."""
    float_sec = (time.time() % 60) / 59.0
    seconds_progress = float_sec * 15

    for y in range(15):
        current_pixel = min(seconds_progress, 1)
        scrollphathd.set_pixel(y + 1, 6, current_pixel * 0.1)
        seconds_progress -= 1

        if seconds_progress <= 0:
            break


def draw_time():
    """Draw the current time to the display with flashing separator."""
    scrollphathd.write_string(
        time.strftime("%H:%M"),
        brightness=0.1,
        font=font5x5,
        x=0,
        y=0,
    )

    if int(time.time()) % 2 == 0:
        scrollphathd.clear_rect(8, 0, 1, 5)


# Handle SIGTERM
signal.signal(signal.SIGTERM, clear)


while True:
    try:
        clear()
        draw_bar()
        draw_time()
        scrollphathd.show()
        time.sleep(0.1)

    # Handle Ctrl-C
    except KeyboardInterrupt:
        print("\nExiting...")
        clear()
        break
